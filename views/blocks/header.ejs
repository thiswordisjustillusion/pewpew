<div class="auth-register">
    <a id="x" href="javascript:PopUpHide()">X</a>
    <div id="auth">
        <ul>
            <li>
                <h3>Вход</h3>
            </li>
            <form>
                <p class="report report-log"></p>
                <p class="report report-log-err"></p>
                <li><input type="text" id="login-login" name="login" placeholder="login" /></li>
                <li><input type="password" id="login-password" name="login-password" placeholder="password" /></li>
                <!--<div class="g-recaptcha" data-sitekey="6LcvVKIUAAAAAJiqhQg9T4w4S1CBBf2KHqBM8rOI"></div>-->
