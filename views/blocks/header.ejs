            </form>
        </ul>
    </div>
    <div id="center-line"></div>
    <div id="register">
        <ul>
            <li>
                <h3>Регистрация</h3>
            </li>
            <form>
                <p class="report report-reg"></p>
                <p class="report report-reg-err"></p>
